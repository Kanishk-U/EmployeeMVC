<!DOCTYPE html>

<html>
@*<head>
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
    </head>*@
<head>
    <title>Employee</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
    <script src="https://kit.fontawesome.com/6fa9354847.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet" />


    <link href="~/Content/Default.css" rel="stylesheet" />
    <style>
        .validation-summary-valid {
            display: none;
        }
        .alternative_cls {
            background: #6c757d00;
        }

        .alternative_cls:nth-child(1), .alternative_cls:nth-child(even) {
            background: #05516033;
        }

        .no_bg {
            
            background: #ffd800
        }
        input[type="radio"] {
            margin-right: 3px;
        }
        .loading {
            position: fixed;
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            opacity: 0.7;
            background-color: #fff;
            z-index: 99;
        }
    </style>

</head>
<body class="mx-0 flex-wrapper">
    <div id="headDiv">


        <header>
            <div class="collapse bg-dark" id="navbarHeader">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-8 col-md-7 py-4">
                            <h4 class="text-white">About</h4>
                            <p class="text-muted">An easy to access employee management website to keep a track of employees in the firm without any issue.</p>
                        </div>
                        <div class="col-sm-4 offset-md-1 py-4">
                            @if (User.Identity.IsAuthenticated == true)
                            {
                                <h4 class="text-white">Welocome @User.Identity.Name</h4>
                            }
                            else
                            {
                                <h4 class="text-white">Contact</h4>
                            }

                            <ul class="list-unstyled">

                                @if (User.Identity.IsAuthenticated == true)
                                {
                                    <li><a href="/Account/Logout" class="text-white">LogOut</a></li>
                                }
                                else
                                {
                                    <li><a href="/Account/Register" class="text-white">Register</a></li>
                                    <li><a href="/Account/Login" class="text-white">Login</a></li>
                                }
                                @*<li><a href="#" class="text-white">Email me</a></li>*@
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="navbar navbar-dark bg-dark shadow-sm">
                <div class="container">
                    <a href="#" class="navbar-brand d-flex align-items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" aria-hidden="true" class="me-2" viewBox="0 0 24 24">
                            <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z" />
                            <circle cx="12" cy="13" r="4" />
                        </svg>
                        <strong>Employee</strong>
                    </a>
                    <button class="navbar-toggler" id="btnToggle" type="button" data-bs-toggle="collapse" data-bs-target="#navbarHeader" aria-controls="navbarHeader" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
            </div>
        </header>
        <div class="flex-wrapper">
            <section id="main-content">
                <section class="wrapper justify-content-center mx-5">
                    @*<form id="form1" runat="server">*@

                    <div>

                        @RenderBody()
                    </div>
                    @*</form>*@


                </section>

            </section>


            <footer id="sticky-footer" class="flex-shrink-0 py-4 bg-dark text-white-50">
                <div class="container text-center">
                    <small>Copyright &copy; Kanishk Gupta</small>
                </div>
            </footer>

        </div>
    </div>
</body>

</html>
<script src="~/Scripts/jquery-1.8.0.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
