@model EmployeeCommon.ViewModels.ForgotPasswordViewModel
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}



<h2>Forgot Password</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            @Html.ValidationSummary(false, "Sorry, there were problems with your submission. Please review these following items:", new { @class = "alert alert-danger text-danger", Id = "valSummary" })
            <div class="form-group">
                <label for="Email" id="lblEmail" class="col-lg-3 col-mb-3 mt-2 " />
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-sm", id = "txtEmail", maxlength = "50", placeholder = "Enter Email Address" })
                
            </div>
            <button type="submit" class="btn btn-primary btn-sm mt-2">Submit</button>
        </form>
    </div>
</div>